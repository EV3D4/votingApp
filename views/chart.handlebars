

<link rel="stylesheet" href="/css/vote.css" />


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.js">
</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>





<div class="row">
  <div class="col-md-6">
    <h1 class="display-3 chartTitle">{{userPolls.question}}</h1>
  </div>
  <div class="col-md-6">
<a href="http://twitter.com/home?status=Vote: {{userPolls.question}} http://votingapp-kalpitp.herokuapp.com/polls/{{userPolls._id}}" >
  <i class="fa fa-twitter fa-2x expandable" aria-hidden="true"></i></a>
</div>
</div>






<div id="chart">
  <canvas id="myChart" width="350" height="350"></canvas>
</div>


<script>

var data = {
    datasets: [{
        data: [{{{userPollTallies}}}],
        backgroundColor: [
            "#FF6384",
            "#4BC0C0",
            "#FFCE56",
            "#E7E9ED",
            "#36A2EB"
        ],
        label: 'My dataset' // for legend
    }],

    labels: [  {{#each userPollLabels}} {{#if this}} "{{{this}}}" {{/if}}, {{/each}}],

};

var ctx = $("#myChart");
new Chart(ctx, {
    data: data,
    type: 'polarArea',
});
</script>
