
<link rel="stylesheet" href="/css/vote.css" />



<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.js">
</script>

<div class="row">
  <div class="col-lg-6">
    <h1 class="display-3 chartTitle">{{userPolls.question}}</h1>
  </div>
  <div class="col-lg-6">
<a href="http://twitter.com/home?status=Vote: {{userPolls.question}} http://votingapp-kalpitp.herokuapp.com/polls/{{userPolls._id}}" >
  <i class="fa fa-twitter fa-2x expandable" aria-hidden="true"></i></a>
</div>
</div>
</div>


</div>

<canvas id="myChart" width="1" height="1"></canvas>

<script>




var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: [  {{#each userPollLabels}} "{{{this}}}", {{/each}}],
        datasets: [{
            label: '# of Votes',
            data: [{{{userPollTallies}}}],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>
