<link rel="stylesheet" href="/css/polls.css" />

<h1 class="display-3">Public Polls</h1>

<div class="container-fluid">
  <div class="row">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Author</th>
            <th>Option 1</th>
            <th>Option 2</th>
            <th>Vote</th>
          </tr>
        </thead>

        <tbody>
          {{#each userPolls}}
            <tr>
              <td>{{inc @index}}</td>
              <td><a href='/users/view/{{this._id}}'>{{trim this.question}}</a></td>
              <td>{{this.username}}</td>
              <td>{{this.option1.opt}}</td>
              <td>{{this.option2.opt}}</td>
              <td><a href='/users/vote/{{this._id}}'> <i class="fa fa-check-square" aria-hidden="true"></i></a></td>
            </tr>
          {{/each}}
        </tbody>

      </table>
    </div>
  </div>
</div>
